{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es6",
    "module": "esnext",
    "esModuleInterop": true,
    "types": ["@testing-library/jest-dom", "node", "jest"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./dist"
